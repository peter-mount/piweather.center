/*
 * Used to provide applications with various items like build version etc
 */
#ifndef PIWEATHER_BUILD_H
#define PIWEATHER_BUILD_H

// The project version, i.e. the main version like 0.1 with build number appended
#define PIWEATHER_VERSION       "0.1.@BUILD_VERSION@"

// The project name
#define PIWEATHER_TITLE         "PI Weather Center " PIWEATHER_VERSION

// The project home page
#define PIWEATHER_HOME          "http://piweather.center"

// Substituted by make to contain the build time
#define PIWEATHER_BUILD_TIME    "@BUILD_ID@"

// The build host
#define PIWEATHER_BUILD_HOST    "@NODE_NAME@"

// If defined the build number in jenkins
#define PIWEATHER_BUILD_NUMBER  "@BUILD_NUMBER@"

// Font details
#define PIWEATHER_FONT          "/usr/share/fonts/truetype/droid/DroidSans.ttf"
#define PIWEATHER_FONT_SIZE     10
#define PIWEATHER_LINE_HEIGHT   12

// Label colour
#define PIWEATHER_LABEL         0x00FFFF00

// Info colour
#define PIWEATHER_COLOUR        0x00FFFFFF

// Position of text
#define PIWEATHER_LEFT          320
#define PIWEATHER_TOP           80

// Image size
#define PIWEATHER_WIDTH         640
#define PIWEATHER_HEIGHT        480

#endif